@model Repository_Pattern_UI.Models.HomePageViewModel

<h2>@ViewBag.Title</h2>
<div class="container table-bordered">

    <div class="row mark">
        @foreach (var ubsModel in Model.ubsModels)
        {
            <div class="col-md-3">
                @Html.DisplayNameFor(model => ubsModel.EmpName)
            </div>
            <div class="col-md-3">
                @Html.DisplayNameFor(model => ubsModel.EmpDesignation)
            </div>
            <div class="col-md-3">
                @Html.DisplayNameFor(model => ubsModel.BillAmount)
            </div>
            <div class="col-md-3">
                @Html.DisplayNameFor(model => ubsModel.BillToBePaidByEmployee)
            </div>
            break;
        }
    </div>
    <div class='clearfix'></div>
    <div class="row mark">
        <div class="col-md-3">
            <input type="text" />
        </div>
        <div class="col-md-3">
            @using (Html.BeginForm("FilterByDesgnation", "Employee",FormMethod.Post))
            {
                <!--This list will come from the SQL database!-->
                @Html.DropDownListFor(model => model.selectedDesignation, new SelectList(Model.ListOfDesignations, "Value", "Text"),
             new { onchange = "this.form.submit();", id = "ddlDesignations" })
            }
        </div>
        <div class="col-md-3">
            <select>
                <option value="0"></option>
                <option value="1">Amount--High to Low</option>
                <option value="2">Amount--Low to High</option>
            </select>
        </div>
        <div class="col-md-3">
            <select>
                <option value="0"></option>
                <option value="1">Amount--High to Low</option>
                <option value="2">Amount--Low to High</option>
            </select>
        </div>
    </div>
    <div class='clearfix'></div>
    @foreach (var item in Model.ubsModels)
    {
        <div class="row">
            <div class="col-md-3">
                @Html.DisplayFor(modelItem => item.EmpName)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(modelItem => item.EmpDesignation)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(modelItem => item.BillAmount)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(modelItem => item.BillToBePaidByEmployee)
            </div>
        </div>
    }

</div>
